<!DOCTYPE html>
<html>
  <head>
    <title>ReviewSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body> 
    <nav class="navbar navbar-light navbar-fixed-top" style="background-color: #a81919;">
  <div class="container-fluid">
    <div class="navbar-header" style="background-color: #303647;">
      <a class="navbar-brand" href="#">WebSiteName</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"> <%= link_to "Home", root_path%></li>
      <li><%= link_to "Login", new_reviewer_registration_path%></li>
      <li><a href="#">Page 2</a></li>
    </ul>
    <form class="navbar-form navbar-left">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</nav>
   
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

     <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
