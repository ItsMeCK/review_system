<p id="notice"><%#= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>City</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
  <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{product.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{product.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
    <%= product.name %>
  </span>
</td>
        <td><%= product.address %></td>
        <td><%= product.phone %></td>
        <td><%= product.city %></td>
        <td><%#= product.type_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to( 'quick help'.html_safe,
            "/quick_help",
            'data-popup' => true,
            :class => "button_class",
            :onclick=>"window.open(this.href,'quick_help', 'height=800, width=500');
                                        return false;"
   ) %><br>

<%= link_to 'New Product', new_product_path %>
